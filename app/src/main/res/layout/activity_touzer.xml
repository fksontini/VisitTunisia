<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fksontini.HelloWorld4GL.TouzerActivity" android:layout_weight="10" android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorAccent"
        android:weightSum="3"
        android:layout_weight="2"
        android:touchscreenBlocksFocus="true">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="1"
            android:background="@drawable/hotel"
            android:layout_margin="30dp"
            android:id="@+id/imgHotel"></ImageView>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="1"
            android:background="@drawable/monument"
            android:layout_margin="30dp"
            android:id="@+id/imgMonument"></ImageView>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="1"
            android:background="@drawable/restaurant"
            android:layout_margin="30dp"
            android:id="@+id/imgRestaurant"></ImageView>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="8"
        android:id="@+id/framgment">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txtView"/>
    </FrameLayout>
</LinearLayout>
